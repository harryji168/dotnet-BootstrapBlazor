@namespace BootstrapBlazor.Components
@inherits BootstrapComponentBase

@foreach (var item in Items)
{
    if (item.HasChildren)
    {
        <li>
            <div class="@ActiveItem("has-leaf nav-link", item)" @onclick="@(e => OnClick(item))"   >
                <span>@item.Text</span>
                <i class="fa fa-angle-down nav-link-right"></i>
                <ul class="nav sub-menu" @onclick:stopPropagation>
                    <SubCascader Items="@item.Items" OnClick="@OnClick" ActiveItem="@ActiveItem" />
                </ul>
            </div>
        </li>
    }
    else
    {
        <li>
            <div class="@ActiveItem("nav-link", item)" @onclick="@(e => OnClick(item))" @onclick:stopPropagation><span>@item.Text</span></div>
        </li>
    }
}
