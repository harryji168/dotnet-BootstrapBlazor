@namespace BootstrapBlazor.Components
@inherits IdComponentBase

@if (Model != null)
{
    <CascadingValue Value="this">
        <EditForm Model="@Model" @attributes="@AdditionalAttributes" id="@Id" OnValidSubmit="@OnValidSubmitForm" OnInvalidSubmit="@OnInvalidSubmit">
            <BootstrapBlazorDataAnnotationsValidator />
            @ChildContent
        </EditForm>
    </CascadingValue>
}
