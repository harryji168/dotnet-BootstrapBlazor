@namespace BootstrapBlazor.Components
@inherits ToggleBase<bool>

@if (IsShowLabel)
{
    <label class="form-label" required="@Required">@DisplayText</label>
}
<div @attributes="@AdditionalAttributes" class="@ClassName" style="@SwitchStyleName">
    <span class="@CoreClassName" data-inner-text="@GetInnerText()" style="@StyleName" @onclick:stopPropagation @onclick="OnClick" />
    @if (!string.IsNullOrEmpty(Text))
    {
        <span class="switch-label" @onclick:stopPropagation @onclick="OnClick">
            @Text
        </span>
    }
</div>
